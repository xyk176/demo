  <!--查询所有购物车==根据客户ID
  List<Shopping> s_Carts(Integer cid)-->
  <select id="s_Carts" resultMap="cartResultMap">
    select s.*, sh.* from shopping sh
    LEFT JOIN customer c on sh.cid3 = c.cid3
    LEFT JOIN sp_commodity s on s.comid = sh.comid
    where sh.cid3 = #{cid} and  sh.stype &gt; 0
  </select>

